<ActorFrame>
	<children>
		<Layer
			Type="AutoActor"
			File="@THEME:GetPath(EC_BGANIMATIONS,'','_shared background no streaks')"
			InitCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;wag;EffectMagnitude,10,0,0;EffectPeriod,8"
		/>
		<Layer
			Type="ActorFrame"
			OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;wag;EffectMagnitude,10,0,0;EffectPeriod,8" 
		>
			<children>
				<ActorFrame OnCommand="wag;EffectMagnitude,0,5,0;EffectPeriod,12;zoomy,1.5*(SCREEN_HEIGHT/SCREEN_WIDTH)">
					<children>
						<Layer File="streak" OnCommand="zoom,1.5;y,-200;z,-100;customtexturerect,0.6,0,0.65,1;texcoordvelocity,0.16,0;diffuse,#DA7979;diffusealpha,0.1" />
						<Layer File="streak" OnCommand="zoom,1.5;y,-160;z,-200;customtexturerect,0.9,0,0.95,1;texcoordvelocity,0.14,0;diffuse,#DA7979;diffusealpha,0.1" />
						<Layer File="streak" OnCommand="zoom,1.5;y,-120;z,-300;customtexturerect,0.2,0,0.25,1;texcoordvelocity,0.12,0;diffuse,#DA7979;diffusealpha,0.2" />
						<Layer File="streak" OnCommand="zoom,1.5;y,-80;z,-400;customtexturerect,0.5,0,0.55,1;texcoordvelocity,0.10,0;diffuse,#DA7979;diffusealpha,0.2" />
						<Layer File="streak" OnCommand="zoom,1.5;y,-40;z,-500;customtexturerect,0.5,0,0.55,1;texcoordvelocity,0.08,0;diffuse,#DA7979;diffusealpha,0.3" />
						<Layer File="streak" OnCommand="zoom,1.5;y,0;z,-600;customtexturerect,0.8,0,0.85,1;texcoordvelocity,0.07,0;diffuse,#DA7979;diffusealpha,0.3" />
						<Layer File="streak" OnCommand="zoom,1.5;y,40;z,-500;customtexturerect,0.9,0,0.95,1;texcoordvelocity,0.09,0;diffuse,#DA7979;diffusealpha,0.3" />
						<Layer File="streak" OnCommand="zoom,1.5;y,80;z,-400;customtexturerect,0.2,0,0.25,1;texcoordvelocity,0.11,0;diffuse,#DA7979;diffusealpha,0.2" />
						<Layer File="streak" OnCommand="zoom,1.5;y,120;z,-300;customtexturerect,0.2,0,0.25,1;texcoordvelocity,0.13,0;diffuse,#DA7979;diffusealpha,0.2" />
						<Layer File="streak" OnCommand="zoom,1.5;y,160;z,-200;customtexturerect,0.5,0,0.55,1;texcoordvelocity,0.15,0;diffuse,#DA7979;diffusealpha,0.1" />
						<Layer File="streak" OnCommand="zoom,1.5;y,200;z,-100;customtexturerect,0.8,0,0.85,1;texcoordvelocity,0.17,0;diffuse,#DA7979;diffusealpha,0.1" />
					</children>
				</ActorFrame>
			</children>
		</Layer>
		<Layer Type="ActorFrame" FOV="45" OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;rotationz,-30;rotationx,-30;rotationy,-15"><children>
			<Layer
				Type="AutoActor"
				File="arrow.txt"
				OnCommand="diffusealpha,0.12;zoom,2;wag;EffectMagnitude,0,0,5;EffectPeriod,5"
			/>
		</children></Layer>
		<!-- clear the zbuffer so that screens can draw without having to clear it -->
		<Layer
			Type="Quad"
			OnCommand="clearzbuffer,1;zoom,0"
		/>		
	</children>
</ActorFrame>
