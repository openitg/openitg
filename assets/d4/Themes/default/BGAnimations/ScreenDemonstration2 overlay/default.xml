<ActorFrame><children>
	<Layer
		File="../ScreenGameplay overlay/demonstration gradient"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;zoomtowidth,SCREEN_WIDTH;zoomtoheight,SCREEN_HEIGHT;diffusealpha,0.8"
	/>
	<Layer
		Type="BitmapText"
		Font="_tutorial"
		Text="Color Arrows::scroll from::low to high."
		OnCommand="x,SCREEN_CENTER_X+SCREEN_WIDTH/4+10;y,SCREEN_CENTER_Y;addx,SCREEN_WIDTH/2;zoom,0.8;sleep,5;decelerate,0.5;addx,-SCREEN_WIDTH/2;sleep,5;linear,0.3;diffusealpha,0"
	/>
	<Layer
		Type="AutoActor"
		File="focus square"
		OnCommand="x,SCREEN_CENTER_X-SCREEN_WIDTH/4;y,SCREEN_CENTER_Y+60;zoomx,1.0;zoomy,1.05;diffuseblink;EffectPeriod,0.5;diffusealpha,0;sleep,6;linear,0.3;diffusealpha,1;sleep,4;linear,0.3;diffusealpha,0"
	/>
	<Layer
		Type="BitmapText"
		Font="_tutorial"
		Text="Step when a::Color Arrow::overlaps the::Target Arrows::at the top."
		OnCommand="x,SCREEN_CENTER_X+SCREEN_WIDTH/4+10;y,SCREEN_CENTER_Y;addx,SCREEN_WIDTH/2;zoom,0.8;sleep,11;decelerate,0.5;addx,-SCREEN_WIDTH/2;sleep,5;linear,0.3;diffusealpha,0"
	/>
	<Layer
		Type="AutoActor"
		File="focus rect"
		OnCommand="x,SCREEN_CENTER_X-SCREEN_WIDTH/4;y,SCREEN_CENTER_Y-124;zoomx,1.0;zoomy,0.8;diffuseblink;EffectPeriod,0.5;diffusealpha,0;sleep,12;linear,0.3;diffusealpha,1;sleep,4;linear,0.3;diffusealpha,0"
	/>
	<Layer
		Type="BitmapText"
		Font="_tutorial"
		Text="The::Traffic Light::helps you::understand::the timing."
		OnCommand="x,SCREEN_CENTER_X+SCREEN_WIDTH/4+10;y,SCREEN_CENTER_Y;addx,SCREEN_WIDTH/2;zoom,0.8;sleep,17;decelerate,0.5;addx,-SCREEN_WIDTH/2;sleep,5;linear,0.3;diffusealpha,0"
	/>
	<Layer
		Type="AutoActor"
		File="focus rect"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y-30;zoomx,1.0;zoomy,1;rotationz,90;diffuseblink;EffectPeriod,0.5;diffusealpha,0;sleep,18;linear,0.3;diffusealpha,1;sleep,4;linear,0.3;diffusealpha,0"
	/>
	<Layer
		Type="BitmapText"
		Font="_tutorial"
		Text="The direction::of the arrow::says which::Panel::to step on."
		OnCommand="x,SCREEN_CENTER_X+SCREEN_WIDTH/4+10;y,SCREEN_CENTER_Y;addx,SCREEN_WIDTH/2;zoom,0.8;sleep,23;decelerate,0.5;addx,-SCREEN_WIDTH/2;sleep,5;linear,0.3;diffusealpha,0"
	/>
	<Layer
		Type="BitmapText"
		Font="_tutorial"
		Text="For arrows::facing Left,::step on the::Left Panel.::::::::"
		OnCommand="x,SCREEN_CENTER_X+SCREEN_WIDTH/4+10;y,SCREEN_CENTER_Y;addx,SCREEN_WIDTH/2;zoom,0.8;sleep,29;decelerate,0.5;addx,-SCREEN_WIDTH/2;sleep,5;linear,0.3;diffusealpha,0"
	/>
	<Layer
		Type="AutoActor"
		File="arrow"
		OnCommand="x,SCREEN_CENTER_X+SCREEN_WIDTH/4-60;y,SCREEN_CENTER_Y+80;rotationz,0;glowblink;EffectPeriod,0.5;diffusealpha,0;sleep,30;linear,0.3;diffusealpha,1;sleep,4;linear,0.3;diffusealpha,0"
	/>
	<ActorFrame
		OnCommand="x,SCREEN_CENTER_X+210;y,SCREEN_CENTER_Y+80;zoom,0.8;rotationx,-20"
		FOV="45"
		VanishX="SCREEN_CENTER_X+210"
		VanishY="SCREEN_CENTER_Y+80"
	><children>
		<AutoActor
			File="../ScreenGameplay underlay/platform"
			OnCommand="y,7;diffuse,0.6,0.6,0.6,0.8;diffusealpha,0;sleep,30;linear,0.3;diffusealpha,1;sleep,4;linear,0.3;diffusealpha,0"
		/>
		<AutoActor
			File="../ScreenGameplay underlay/panelglow"
			OnCommand="x,-45;blend,add;diffuseblink;EffectPeriod,0.5;diffusealpha,0;sleep,30;linear,0.3;diffusealpha,1;sleep,4;linear,0.3;diffusealpha,0"
		/>
	</children></ActorFrame>
	<Layer
		Type="BitmapText"
		Font="_tutorial"
		Text="For arrows::facing Up,::step on the::Up Panel.::::::::"
		OnCommand="x,SCREEN_CENTER_X+SCREEN_WIDTH/4+10;y,SCREEN_CENTER_Y;addx,SCREEN_WIDTH/2;zoom,0.8;sleep,35;decelerate,0.5;addx,-SCREEN_WIDTH/2;sleep,5;linear,0.3;diffusealpha,0"
	/>
	<Layer
		Type="AutoActor"
		File="arrow"
		OnCommand="x,SCREEN_CENTER_X+SCREEN_WIDTH/4-60;y,SCREEN_CENTER_Y+80;rotationz,90;glowblink;EffectPeriod,0.5;diffusealpha,0;sleep,36;linear,0.3;diffusealpha,1;sleep,4;linear,0.3;diffusealpha,0"
	/>
	<ActorFrame
		OnCommand="x,SCREEN_CENTER_X+210;y,SCREEN_CENTER_Y+80;zoom,0.8;rotationx,-20"
		FOV="45"
		VanishX="SCREEN_CENTER_X+210"
		VanishY="SCREEN_CENTER_Y+80"
	><children>
		<AutoActor
			File="../ScreenGameplay underlay/platform"
			OnCommand="y,7;diffuse,0.6,0.6,0.6,0.8;diffusealpha,0;sleep,36;linear,0.3;diffusealpha,1;sleep,4;linear,0.3;diffusealpha,0"
		/>
		<AutoActor
			File="../ScreenGameplay underlay/panelglow"
			OnCommand="y,-45;blend,add;diffuseblink;EffectPeriod,0.5;diffusealpha,0;sleep,36;linear,0.3;diffusealpha,1;sleep,4;linear,0.3;diffusealpha,0"
		/>
	</children></ActorFrame>
	<Layer
		Type="Quad"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;zoomtowidth,SCREEN_WIDTH;zoomtoheight,SCREEN_HEIGHT;diffuse,0,0,0,1;sleep,3.5;linear,0.5;diffusealpha,0"
	/>
	<Layer
		Type="AutoActor"
		File="instructions"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;cropright,1.3;linear,1;cropright,-0.3;sleep,2;decelerate,0.5;zoom,0.7;y,SCREEN_TOP+40"
	/>
	<Layer
		Type="AutoActor"
		File="white instructions"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;zoom,1.05;cropleft,-0.3;cropright,1;faderight,.1;fadeleft,.1;linear,1;cropleft,+1;cropright,-0.3"
	/>
	<Layer
		Type="AutoActor"
		File="../ScreenAttract overlay"
	/>
</children></ActorFrame>